    Height="600"
    d:DataContext="{d:DesignInstance vms:MainViewModel}"
    mc:Ignorable="d">
    <DockPanel>
        <materialdesign:ColorZone DockPanel.Dock="Top">
            <Menu>
                <MenuItem Height="25" Header="Reload" Click="MenuItem_Click" />
