                <MenuItem Height="25" Header="Scripts" />
                <MenuItem Height="25" Header="Options" />
                <MenuItem Height="25" Header="Tools" />
                <MenuItem Height="25" Header="Plugins" />
                <MenuItem Height="25" Header="Multi Window" />
            </Menu>
        </materialdesign:ColorZone>
        <WindowsFormsHost Margin="2,0,2,2">
            <wf:Panel x:Name="gameContainer" />
        </WindowsFormsHost>
    </DockPanel>
